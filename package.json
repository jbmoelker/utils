{
    "name": "astro-utils",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "workspaceRelease": {
        "npmRelease": true,
        "extendsReleaseRules": [
            {
                "type": "bump",
                "release": "patch"
            }
        ]
    },
    "scripts": {
        "create-release": "semantic-release-npm-workspaces-monorepo"
    },
    "devDependencies": {
        "semantic-release-npm-workspaces-monorepo": "^2.0.1"
    }
}
