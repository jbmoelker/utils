---
import { BButton, BOption, BSelect, Bind, BindForm } from '@astro-utils/forms/forms.js';
import Layout from '../layouts/Layout.astro';

const bind = Bind();
function onSubmit() {
    console.log(bind);
}

const date = new Date('2021-01-01');
---

<Layout title='Test Select'>
    <BindForm bind={bind} key='page'>
        <BSelect name='select' value={['b', 'c']} multiple>
            <BOption value='a'>Option A</BOption>
            <BOption value='b'>Option B</BOption>
            <BOption value='c'>Option C</BOption>
        </BSelect>

        <BSelect name='select2' value='2c'>
            <BOption>2a</BOption>
            <BOption>2b</BOption>
            <BOption>2c</BOption>
        </BSelect>

        <BSelect name='selectNumbers' value={1} type='number'>
            <BOption value={1}>_1_</BOption>
            <BOption>2</BOption>
            <BOption>3</BOption>
        </BSelect>

        <BSelect name='select3' value={[date, new Date(0)]} multiple type='date'>
            <BOption value={date}>number 1</BOption>
            <BOption value={0}>number 2</BOption>
            <BOption value={1}>number 3</BOption>
        </BSelect>

        <BButton whenFormOK onClick={onSubmit}>Submit</BButton>
    </BindForm>
</Layout>
